<Window x:Class="Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculator"
        mc:Ignorable="d"
        Title="Calculator"
        Width="400"
        Height="600"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen"
        Background="#181616"
        Icon="./assets/icon.ico">

    <Grid ShowGridLines="False">
        <!--
        ========================
            COLUMNS
        -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <!--
        ========================
            ROWS
        -->
        <Grid.RowDefinitions>
            <RowDefinition Height="170"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <!--
        ========================
            CUSTOM STYLES
        -->
        <Grid.Resources>
            <!--
            ========================
                NUMBERS BUTTONS
            -->
            <Style x:Key="NumbersButton"
                   TargetType="Button">
                <Setter Property="OverridesDefaultStyle"
                        Value="True"/>
                <Setter Property="Margin"
                        Value="5"/>
                <Setter Property="Foreground"
                        Value="#74966a"/>
                <Setter Property="FontWeight"
                        Value="Bold"/>
                <Setter Property="FontSize"
                        Value="22"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Name="border"
                                    BorderThickness="0"
                                    Padding="4,2"
                                    BorderBrush="DarkGray"
                                    CornerRadius="6"
                                    Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Setter Property="Background"
                        Value="#2a2a2a"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver"
                             Value="True">
                        <Setter Property="Background"
                                Value="#353535"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <!--
            ========================
                MAIN LABEL
            -->
            <Style x:Key="LabelStyle"
                   TargetType="Label">
                <Setter Property="OverridesDefaultStyle"
                        Value="True"/>
                <Setter Property="Margin"
                        Value="5"/>
                <Setter Property="Foreground"
                        Value="#74966a"/>
                <Setter Property="FontWeight"
                        Value="Bold"/>
                <Setter Property="FontSize"
                        Value="44"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Label">
                            <Border Name="border"
                                    BorderThickness="0"
                                    Padding="8,8"
                                    BorderBrush="DarkGray"
                                    CornerRadius="6"
                                    Background="#2a2a2a">
                                <ContentPresenter HorizontalAlignment="Right"
                                                  VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Grid.Resources>

        <!--
        ========================
            LABEL
        -->
        <Label Style="{StaticResource LabelStyle}"
               Name="Display"
               Grid.Column="0"
               Grid.Row="0"
               Grid.ColumnSpan="4"/>

        <!--
        ========================
            BUTTONS
        -->

        <!-- 
            SECOND ROW
        -->
        <Button Style="{StaticResource NumbersButton}"
                x:Name="Number_7"
                Grid.Column="0"
                Grid.Row="1">
            7
        </Button>

        <Button Style="{StaticResource NumbersButton}"
                x:Name="Number_8"
                Grid.Column="1"
                Grid.Row="1">
            8
        </Button>

        <Button Style="{StaticResource NumbersButton}"
                x:Name="Number_9"
                Grid.Column="2"
                Grid.Row="1">
            9
        </Button>

        <!-- 
            THIRD ROW
        -->
        <Button Style="{StaticResource NumbersButton}"
                x:Name="Number_4"
                Grid.Column="0"
                Grid.Row="2">
            4
        </Button>

        <Button Style="{StaticResource NumbersButton}"
                x:Name="Number_5"
                Grid.Column="1"
                Grid.Row="2">
            5
        </Button>

        <Button Style="{StaticResource NumbersButton}"
                x:Name="Number_6"
                Grid.Column="2"
                Grid.Row="2">
            6
        </Button>

        <!-- 
            FOURTH ROW
        -->
        <Button Style="{StaticResource NumbersButton}"
                x:Name="Number_1"
                Grid.Column="0"
                Grid.Row="3">
            1
        </Button>

        <Button Style="{StaticResource NumbersButton}"
                x:Name="Number_2"
                Grid.Column="1"
                Grid.Row="3">
            2
        </Button>

        <Button Style="{StaticResource NumbersButton}"
                x:Name="Number_3"
                Grid.Column="2"
                Grid.Row="3">
            3
        </Button>

        <!-- 
            FIFTH ROW
        -->
        <Button Style="{StaticResource NumbersButton}"
                x:Name="Number_0"
                Grid.Column="1"
                Grid.Row="4">
            0
        </Button>
    </Grid>
</Window>
